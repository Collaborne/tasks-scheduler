{
	"root": true,
	"env": {
		"browser": false,
		"commonjs": false,
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": false
		},
		"sourceType": "module"
	},

	"extends": "eslint-config-collaborne",

	"overrides": [
		{
			"files": "server/index.js",

			"parserOptions": {
				"sourceType": "script"
			}
		},
		{
			"files": "test/**/*.js",

			"env": {
				"mocha": true
			},

			"rules": {
				"no-unused-expressions": "warn"
			}
		}
	]
}
